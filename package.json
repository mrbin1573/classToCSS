{
  "name": "classtocss",
  "displayName": "classtocss",
  "description": "Class automatically converts to CSS",
  "version": "0.1.0",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "engines": {
    "vscode": "^1.54.0"
  },
  "publisher": "classToCss",
  "categories": [
    "Formatters",
    "Data Science",
    "Other"
  ],
  "keywords": [
    "class to style",
    "class to css",
    "automatically style",
    "automatically css",
    "px",
    "rem",
    "rpx",
    "vw",
    "class",
    "css",
    "sass",
    "scss",
    "less",
    "vh"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:jade",
    "onLanguage:vue",
    "onLanguage:vue-html",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:ftl"
  ],
  "repository": "https://github.com/mrbin1573/classToCss",
  "main": "./index.js",
  "contributes": {
    "languages": [
      {
        "id": "ftl",
        "extensions": [
          ".ftl"
        ],
        "aliases": [
          "FreeMarker"
        ]
      }
    ],
    "snippets": [
      {
        "language": "vue",
        "path": "./snippets.json"
      },
      {
        "language": "html",
        "path": "./snippets.json"
      },
      {
        "language": "javascript",
        "path": "./snippets.json"
      },
      {
        "language": "jade",
        "path": "./snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets.json"
      },
      {
        "language": "ftl",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "title": "classtocss configuration",
      "properties": {
        "classtocss.unit": {
          "type": "string",
          "default": "px",
          "description": "数值的单位(Unit of value)。eg: top-20 => top: (20 * valueRatio) + unit"
        },
        "classtocss.valueRatio": {
          "type": "number",
          "default": 1,
          "description": "数值的缩放比例(The scaling ratio of the value)。eg: top-20 => top: (20 * valueRatio) + unit"
        },
        "classtocss.useApply": {
          "type": "boolean",
          "default": true,
          "description": "组合class"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.3"
  }
}
